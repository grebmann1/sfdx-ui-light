{
    "name": "sfdx-ui-light",
    "version": "1.4.1",
    "engines": {
        "node": "22.14"
    },
    "scripts": {
        "start:dev:extension": "rm -r chrome_ext; npm-run-all --parallel watch:extension serve:extension",
        "watch:extension": "rollup -c rollup.config.mjs --bundleConfigAsCjs --environment NODE_ENV:development --watch --watch.buildDelay 3000 --logLevel error",
        "serve:extension": "serve chrome_ext",
        "start:dev:client": "npm run clean; NODE_ENV=development node -r dotenv/config src/server/server-dev.js",
        "start:dev:workers": "rollup -c worker.rollup.config.mjs --bundleConfigAsCjs --environment NODE_ENV:development;",
        "start:prod:client": "npm run clean; NODE_ENV=production WARMUP=true lwr build -m prod --minify --clean; NODE_ENV=production node -r dotenv/config src/server/server-prod.js",
        "start:prod:extension": "rm -r chrome_ext; rollup -c rollup.config.mjs --bundleConfigAsCjs --environment NODE_ENV:production; rollup -c worker.rollup.config.mjs --bundleConfigAsCjs --environment NODE_ENV:production",
        "clean": "rm -r __lwr_cache__ site __skip_directory_creation__",
        "fix:lightning": "node scripts/fix_lightning.js",
        "generate:metadata": "node scripts/generate_metadata.js",
        "script:documentation": "node scripts/load_documentation.js",
        "start:heroku": "NODE_ENV=production REDIRECT_URI=https://sf-toolkit.com/oauth2/callback node -r dotenv/config src/server/server-prod.js",
        "heroku-postbuild": "npm run clean; NODE_ENV=production WARMUP=true lwr build -m prod --clean",
        "start:prod:build": "npm run clean; NODE_ENV=production WARMUP=true lwr build -m prod --minify --clean;",
        "start:prod:run": "NODE_ENV=production node -r dotenv/config src/server/server-prod.js",
        "format": "prettier --write \"src/**/*.{js,jsx,ts,tsx,json,css,scss,html}\"",
        "format:check": "prettier --check \"src/**/*.{js,jsx,ts,tsx,json,css,scss,html}\"",
        "lint:eslint": "eslint \"src/**/*.{js,jsx,ts,tsx}\"",
        "lint:eslint:fix": "eslint \"src/**/*.{js,jsx,ts,tsx}\" --fix",
        "lint": "npm run lint:eslint && npm run format:check",
        "build:openai-bundler": "cd bundler/openai && npm install && npm run build && cp dist/* ../../src/client/assets/libs/openai/"
    },
    "nx": {
        "targets": {
            "build": {
                "outputs": [
                    "{projectRoot}/chrome_ext"
                ]
            }
        }
    },
    "copyFiles": [
        {
            "from": "node_modules/@salesforce-ux/design-system/assets",
            "to": "src/client/assets"
        },
        {
            "from": "node_modules/xterm/css/xterm.css",
            "to": "src/client/assets/styles"
        }
    ],
    "dependencies": {
        "@jetstreamapp/soql-parser-js": "^6.2.4",
        "@lwc/synthetic-shadow": "^8.21.2",
        "@lwrjs/router": "^0.18.3",
        "@reduxjs/toolkit": "^2.8.2",
        "@salesforce-ux/design-system": "2.27.2",
        "@webcomponents/custom-elements": "^1.6.0",
        "cometd": "^7.0.12",
        "diff": "^7.0.0",
        "dotenv": "^16.3.1",
        "express": "^5.1.0",
        "flexsearch": "^0.8.205",
        "highlight.js": "^11.9.0",
        "hotkeys-js": "3.13.7",
        "js-yaml": "^4.1.0",
        "jsforce": "^3.4.1",
        "lightning-base-components": "^1.22.2-alpha",
        "localforage-webextensionstorage-driver": "^3.0.0",
        "lwr": "^0.18.3",
        "mermaid": "^11.10.1",
        "moment": "^2.30.1",
        "monacopilot": "1.2.7",
        "node-fetch": "^2.7.0",
        "node-schedule": "^2.1.1",
        "openai": "^5.16.0",
        "qs": "^6.11.2",
        "redux": "^4.0.5",
        "redux-thunk": "^2.3.0",
        "request": "2.88.2",
        "serve": "^14.2.1",
        "serve-static": "^1.15.0",
        "tabulator-tables": "6.2.1",
        "xml2js": "^0.6.2",
        "xterm": "^5.3.0",
        "zod": "^3.23.8",
        "openapi-sampler":"^1.6.1"
    },
    "devDependencies": {
        "@babel/preset-env": "^7.28.3",
        "@babel/runtime": "^7.28.3",
        "@lwc/rollup-plugin": "^8.21.2",
        "@rollup/plugin-alias": "^5.1.1",
        "@rollup/plugin-babel": "^6.0.4",
        "@rollup/plugin-commonjs": "^26.0.1",
        "@rollup/plugin-json": "^6.1.0",
        "@rollup/plugin-node-resolve": "^15.2.3",
        "@rollup/plugin-replace": "^5.0.7",
        "@rollup/plugin-terser": "^0.4.4",
        "lwc": "^8.21.2",
        "npm-run-all": "^4.1.5",
        "prettier": "^3.6.2",
        "rollup-plugin-copy": "^3.5.0",
        "rollup-plugin-polyfill-node": "^0.13.0",
        "serve-handler": "^6.1.6"
    }
}
